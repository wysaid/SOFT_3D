    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch Debug",
            "type": "cppvsdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/Debug/ege-demo.exe",
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}/build",
            "environment": [],
            "console": "integratedTerminal",
            "preLaunchTask": "Run Project (Debug)",

            "osx": {
                "program": "/bin/bash",
                "args": [
                    "-c",
                    "echo Run ${workspaceFolder}/build/ege-demo.exe done."
                ],
            },
            "windows": {
                "preLaunchTask": "Build Project (Debug)"
            },
        },
        {
            "name": "Launch Release",
            "type": "cppvsdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/Release/ege-demo.exe",
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}/build",
            "environment": [],
            "console": "integratedTerminal",
            "preLaunchTask": "Run Project (Release)",

            "osx": {
                "program": "/bin/bash",
                "args": [
                    "-c",
                    "echo Run ${workspaceFolder}/build/ege-demo.exe done."
                ],
            },
            "windows": {
                "preLaunchTask": "Build Project (Release)"
            },
        }
    ]
}